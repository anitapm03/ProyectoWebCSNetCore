<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoWebCSNetCore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoWebCSNetCore.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="container">
                    <ul class="navbar-nav flex-grow-1">
                        <li class ="nav-item">
                            <a class="navbar-brand" href="#">
                                <img src="~/images/logosinfondo.png" alt="ConciertosSolo" width="50" height="50">
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Conciertos">Conciertos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Artistas">Artistas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Quienes">¿Quienes somos?</a>
                        </li>

                        @if (Context.Session.GetString("USUARIO") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Publicaciones">Feed</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Acciones" asp-action="CrearPubli">Crear Publicación</a>
                            </li>
                        }
                        
                    </ul>
                </div>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img src="~/images/iconouser.png" width="25" height="25" />
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @if(Context.Session.GetString("USUARIO") == null)
                                {
                                    <a class="nav-link text-dark" asp-controller="Sesion" asp-action="Login">Log in</a>
                                    <a class="nav-link text-dark" asp-controller="Sesion" asp-action="Registro">Registrarse</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark" asp-controller="Sesion" asp-action="EditarPerfil">Perfil</a>
                                    <a class="nav-link text-dark" asp-controller="Sesion" asp-action="CerrarSesion">Cerrar Sesión</a>
                                }

                            </div>
                        </li>

                        @if (Context.Session.GetString("ROL") == "1")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="PanelAdmin">Administrar</a>
                            </li>
                        }

                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ProyectoWebCSNetCore - Ana María Pereira
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
