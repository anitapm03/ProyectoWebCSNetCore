@model List<Genero>

<h1>Administrar generos:</h1>

<a asp-controller="Admin" asp-action="PanelAdmin"
   class="btn btn-outline-dark">
    Volver
</a>
<a asp-controller="Admin" asp-action="CrearGenero"
   class="btn btn-outline-success">
    Nuevo Género
</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Genero g in Model)
        {
            <tr>
                <td>@g.Nombre</td>
                <td>
                    <a asp-controller="Admin" asp-action="EliminarGenero"
                       asp-route-id="@g.IdGenero" class="btn btn-danger">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
