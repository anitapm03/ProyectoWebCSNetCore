@model List<Usuario>

<h1>Administrar usuarios:</h1>

<a asp-controller="Admin" asp-action="PanelAdmin"
   class="btn btn-outline-dark">
    Volver
</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Usuario user in Model)
        {
            <tr>
                <td>@user.Nombre</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="Admin" asp-action="EliminarUsuario"
                       asp-route-id="@user.IdUsuario" class="btn btn-danger">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
