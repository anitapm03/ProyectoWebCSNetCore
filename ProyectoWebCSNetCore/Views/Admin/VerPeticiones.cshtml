@model List<Peticion>

<h1>Lista de peticiones de concietos:</h1>
<a asp-controller="Admin" asp-action="PanelAdmin"
class="btn btn-outline-dark">
    Volver
</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Provincia</th>
            <th>Fecha</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Peticion p in Model)
        {
            <tr>
                <td>@p.NombreArtista</td>
                <td>@p.Provincia</td>
                <td>@p.Fecha</td>
                <td>@p.Telefono</td>
                <td>
                    <a asp-controller="Admin" asp-action="EliminarPeticion"
                    asp-route-id="@p.IdPeticion" class="btn btn-danger">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
