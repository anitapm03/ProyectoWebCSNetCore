@model List<Artista>

<h1>Administrar artistas:</h1>

<a asp-controller="Admin" asp-action="PanelAdmin"
   class="btn btn-outline-dark">
    Volver
</a>
<a asp-controller="Admin" asp-action="CrearArtista"
   class="btn btn-outline-success">
    Nuevo Artista
</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Artista a in Model)
        {
            <tr>
                <td>@a.Nombre</td>
                <td>
                    <img src="~/images/artistas/@a.Imagen"
                    style="width: 50px; height: 50px"/>
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="EliminarArtista"
                       asp-route-id="@a.IdArtista" class="btn btn-danger">
                        Eliminar
                    </a>
                    <a asp-controller="Admin" asp-action="EditarArtista"
                       asp-route-id="@a.IdArtista" class="btn btn-info">
                        Editar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

