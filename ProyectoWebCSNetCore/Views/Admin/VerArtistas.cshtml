@model List<Artista>

<h1>Administrar artistas:</h1>

<a asp-controller="Admin" asp-action="PanelAdmin"
   class="btn btn-outline-dark">
    Volver
</a>
<a asp-controller="Admin" asp-action="CrearArtista"
   class="btn btn-outline-success">
    Nuevo Artista
</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Artista a in Model)
        {
            <tr>
                <th>@a.Nombre</th>
                <th>
                    <img src="~/images/artistas/@a.Imagen"
                    style="width: 50px; height: 50px"/>
                </th>

            </tr>
        }
    </tbody>
</table>

