@model List<Evento>

<h1>Administrar conciertos:</h1>
<a asp-controller="Admin" asp-action="PanelAdmin"
   class="btn btn-outline-dark">
    Volver
</a>
<a asp-controller="Admin" asp-action="CrearConcierto"
   class="btn btn-outline-success">
    Nuevo Concierto
</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Fecha</th>
            <th>Sala</th>
            <th>Provincia</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Evento e in Model)
        {
            <tr>
                <td>@e.Nombre</td>
                <td>@e.Fecha</td>
                <td>@e.NombreSala</td>
                <td>@e.Provincia</td>
                <td>
                    <a asp-controller="Admin" asp-action="EliminarConcierto"
                       asp-route-id="@e.IdConcierto" class="btn btn-danger">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
